.payPalPopup
  display flex
  flex-direction column
  align-items center
  justify-content center
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-image background-gradient
  background-color #FFFFFF
  z-index 9999
  box-sizing border-box
  padding 0 20px

.payPalPopupInner
  position relative
  width 100%
  max-width 420px
  font-size font-size-s
  background rgba(144, 200, 89, 0.8)
  border 2px solid rgba(131, 195, 255, 0.35)
  box-shadow 0 0 12px rgba(0, 0, 0, 0.32), inset 0px 0px 4px rgba(0, 0, 0, 0.28)
  border-radius 40px
  box-sizing border-box
  padding 40px 20px

  a
    font-weight 600
    border-bottom 1px solid rgba(255, 255, 255, 0.5)
    transition all 0.3s

    &:hover
      border-bottom-color transparent

    &[target="_blank"]
      position relative
      display inline-block
      margin-right 25px

      &::after
        content ''
        position absolute
        right -25px
        bottom -4px
        width 23px
        height 28px
        background-image url('./link.svg')
        background-repeat no-repeat
        margin-left 5px
        margin-bottom 3px

.pay
  font-size 16px

.activate
  font-weight 600
  font-size 16px
  padding-right 70px

.button
  position absolute
  right 20px
  top 20px

.icon
  position absolute
  bottom -10px
  right -10px
