.button
  {default-font}
  display flex
  flex-direction column
  align-items center
  justify-content center
  width 100%
  outline 0
  border 0
  padding 0

.default
  box-shadow inset 0 0 5px rgba(0, 0, 0, 0.29)
  border 5px solid #FFFFFF
  filter drop-shadow(0px 0px 7px rgba(0, 0, 0, 0.27))
  font-weight 900
  box-sizing border-box

  &.m
    border-radius 90px
    height 50px
    padding 0 20px

.clean
  width auto

.primary
  background-color primary-color
  color #FFFFFF

  &:active
    background-color primary-color-dark

.secondary
  background-color secondary-color
  color #FFFFFF

  &:active
    background-color secondary-color-dark

.transparent
  background-color transparent

.round.m
  width 50px
  padding 0
